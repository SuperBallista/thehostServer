{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "composite": false // ✅ 하나만 쓴다면 굳이 필요 없음
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
